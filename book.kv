MDScreen:
    name : "book"
    md_bg_color : 1, 1, 1, 1

    canvas:
        Color:
            rgb : 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos : self.pos
            source : "images/blackter.jpg"

    MDCard:
        md_bg_color : 133/255, 0, 0, 1
        elevation: 5
        size_hint : 1, .18
        radius : [0, 0, 15, 15]
        pos_hint : {"center_x" : .5, "center_y" : .92}
        MDFloatLayout:
            FitImage:
                size_hint : .15, .65
                radius : [50]
                pos_hint : {"center_x" : .1, "center_y" : .5}
                source : "images/log.png"
            MDLabel:
                text: "Adnan's Institute of WitchCraft"
                halign : "center"
                font_size : "22sp"
                pos_hint : {"center_x" : .56, "center_y" : .5}
                font_name : "fonts/Poppins-Bold.ttf"
                theme_text_color : "Custom"
                text_color : 1, 1, 1, 1

    MDFloatLayout:
        MDIconButton:
            icon : "arrow-left-bold"
            icon_size : "35dp"
            pos_hint : {"center_x" : .1, "center_y" : .78}
            theme_text_color : "Custom"
            text_color : "white"
            on_press : root.manager.current = "library"
        MDLabel:
            id : titled
            text : "A Song of Ice and Fire"
            font_size : "25dp"
            halign : "center"
            pos_hint : {"center_x" : .5, "center_y" : .78}
            theme_text_color: "Custom"
            text_color: "orange"
            font_name : "fonts/Poppins-Bold.ttf"

        MDIconButton:
            icon : "arrow-left-bold"
            icon_size : "30dp"
            pos_hint : {"center_x" : .05, "center_y" : .4}
            theme_text_color : "Custom"
            text_color : "white"
            on_press : book_content.load_previous()
        MDIconButton:
            icon : "arrow-right-bold"
            icon_size : "30dp"
            pos_hint : {"center_x" : .95, "center_y" : .4}
            theme_text_color : "Custom"
            text_color : "white"
            on_press : book_content.load_next()

        MDCard:
            size_hint : .8, .69
            pos_hint : {"center_x" : .5, "center_y" : .37}
            Carousel:
                id : book_content
