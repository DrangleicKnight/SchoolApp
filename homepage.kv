                                    pos_hint : {"center_x" : .55, "center_y" : .57}
                                    font_name : "fonts/Poppins-SemiBold.ttf"
                                MDLabel:
                                    text : "Quidditch - Registration\nAdnan's University of WitchCraft"
                                    font_size : "12sp"
                                    pos_hint : {"center_x" : .55, "center_y" : .3}
                                    font_name : "fonts/Poppins-SemiBold.ttf"

                    MDCard:
                        md_bg_color : 1, 1, 1, .8
                        size_hint : .46, .18
                        pos_hint : {"center_x" : .74, "center_y" : .97}
