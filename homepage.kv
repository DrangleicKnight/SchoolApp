#: import add_about_card homepage.add_about_card

MDScreen:
    name : "homepage"

    canvas.before:
        Color:
            rgb : 1, 1, 1, .9
        Rectangle:
            size : self.size
            pos : self.pos
            source : "images/back.jpg"

    GridLayout:
        cols : 1
        MDCard:
            md_bg_color : 133/255, 0, 0, 1
            elevation: 5
            size_hint : 1, .2
            radius : [0, 0, 15, 15]
            pos_hint : {"center_x" : .5, "center_y" : .8}
            MDFloatLayout:
                FitImage:
                    size_hint : .15, .65
                    radius : [50]
                    pos_hint : {"center_x" : .1, "center_y" : .5}
                    source : "images/log.png"
                MDLabel:
                    text: "Adnan's Institute of WitchCraft"
                    halign : "center"
                    font_size : "22sp"
                    pos_hint : {"center_x" : .56, "center_y" : .5}
                    theme_text_color : "Custom"
                    text_color : "white"
                    font_name : "fonts/Poppins-Bold.ttf"
        MDCard:
            md_bg_color : 0, 0, 0, .5
            size_hint : 1, .08
            ScrollView:
                id : scrollside
                do_scroll_x : True
                do_scroll_y : False
                GridLayout:
                    rows : 1
                    size_hint : None, 1
                    width : scrollside.width * 1.1
                    padding : [20, 5, 0, 0]
                    spacing : 20
                    MDFlatButton:
                        text : "About Us"
                        theme_text_color : "Custom"
                        text_color : "orange"
                        font_name : "fonts/Poppins-SemiBold.ttf"
                        on_press : add_about_card(app)
                    MDFlatButton:
                        text : "Programs"
                        theme_text_color : "Custom"
                        text_color : "orange"
                        font_name : "fonts/Poppins-SemiBold.ttf"
                    MDFlatButton:
                        text : "Student's Hub"
                        theme_text_color : "Custom"
                        text_color : "orange"
                        font_name : "fonts/Poppins-SemiBold.ttf"
                        on_press : root.manager.current = "students_hub"
                    MDFlatButton:
                        text : "Library"
                        theme_text_color : "Custom"
                        text_color : "orange"
                        font_name : "fonts/Poppins-SemiBold.ttf"
                        on_press : root.manager.current = "library"
                    MDFlatButton:
                        text : "Log Out"
                        theme_text_color : "Custom"
                        text_color : "orange"
                        font_name : "fonts/Poppins-SemiBold.ttf"
                        on_press : root.manager.current = "login"

        ScrollView:
            id : scroll
            do_scroll_x : False
            do_scroll_y : True

            GridLayout:
                cols : 1
                size_hint : 1, None
                height : scroll.height * 3.3

                Carousel:
                    id : caroused
                    size_hint: 1, .25
                    loop : True
                    MDFloatLayout:
                        FitImage:
                            size: self.size
                            pos: self.pos
                            source: "images/image2.jpg"
                    MDFloatLayout:
                        FitImage:
                            size: self.size
                            pos: self.pos
                            source: "images/image4.jpg"
                    MDFloatLayout:
                        FitImage:
                            size: self.size
                            pos: self.pos
                            source: "images/image5.jpeg"

                MDFloatLayout:
                    MDCard:
                        md_bg_color : 1, 1, 1, .8
                        size_hint : .46, .18
                        pos_hint : {"center_x" : .26, "center_y" : .97}
                        ScrollView:
                            id : scard
                            do_scroll_x : False
                            do_scroll_y : True
                            loop : True
                            MDFloatLayout:
                                size_hint : 1, None
                                height : scard.height * 1.2
                                MDRoundFlatButton:
                                    text : "Admission"
                                    font_name : "fonts/Poppins-SemiBold.ttf"
                                    md_bg_color : 133/255, 0, 0, .9
                                    size_hint : .85, .2
                                    pos_hint : {"center_x" : .5, "center_y" : .82}
                                    on_press : root.manager.current = "admission_form"
