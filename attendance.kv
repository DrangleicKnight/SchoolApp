#: import studentDetect studentDetection.studentDetect
#: import dateTime attendance.dateTime

MDScreen:
    name : "attendance"
    md_bg_color : 1, 1, 1, .1

    canvas.before:
        Color:
            rgba : 1, 1, 1, 1
        Rectangle:
            size : self.size
            pos : self.pos
            source : "images/back.jpg"

    MDCard:
        md_bg_color : 133/255, 0, 0, 1
        elevation: 5
        size_hint : 1, .18
        radius : [0, 0, 15, 15]
        pos_hint : {"center_x" : .5, "center_y" : .92}
        MDFloatLayout:
            FitImage:
                size_hint : .15, .65
                radius : [50]
                pos_hint : {"center_x" : .1, "center_y" : .5}
                source : "images/log.png"
            MDLabel:
                text: "Adnan's Institute of WitchCraft"
                halign : "center"
                font_size : "22sp"
                pos_hint : {"center_x" : .56, "center_y" : .5}
                font_name : "fonts/Poppins-Bold.ttf"
                theme_text_color : "Custom"
                text_color : 1, 1, 1, 1

    MDIconButton:
        icon : "arrow-u-left-top-bold"
        icon_size : "30dp"
        pos_hint : {"center_x" : .15, "center_y" : .77}
        on_press : root.manager.current = "teachers_dashboard"

    MDLabel:
        text : "Attendance"
        font_size : "25sp"
        halign : "center"
        pos_hint : {"center_x" : .75, "center_y" : .77}
        font_name : "fonts/Poppins-Bold.ttf"

    MDCard:
        size_hint: .57, .3
        radius : [20]
        md_bg_color : 0, 0, 0, 1
        pos_hint : {"center_x" : .49, "center_y" : .56}
        Video:
            id : img
            size : self.size
            pos : self.pos
            source : "images/facer.gif"
            anim_delay : .05

    MDLabel:
        text : "Select today's date"
        font_size : "30sp"
        pos_hint : {"center_x" : .49, "center_y" : .36}
        halign : "center"
        font_name : "fonts/Poppins-Bold.ttf"

    MDTextField:
        id : toDate
        hint_text : "Today's Date"
        mode : "rectangle"
        size_hint : .5, .08
        pos_hint : {"center_x" : .47, "center_y" : .28}
        font_name : "fonts/Poppins-Bold.ttf"
        hint_text_color_normal : "black"
        line_color_normal : "black"
    MDTextField:
        id : sheetName
        hint_text : "Sheet Name"
        mode : "rectangle"
        size_hint : .5, .08
        pos_hint : {"center_x" : .47, "center_y" : .18}
        font_name : "fonts/Poppins-Bold.ttf"
        hint_text_color_normal : "black"
        line_color_normal : "black"
    MDIconButton:
        icon : "calendar"
        icon_size : "50dp"
        pos_hint : {"center_x" : .82, "center_y" : .25}
        on_press : dateTime(app)

    MDRaisedButton:
        id : btn
        size_hint : .3, .08
        text : "Start"
        pos_hint : {"center_x" : .3, "center_y" : .07}
        on_press : studentDetect(app, toDate)
        disabled : True
    MDRaisedButton:
        id : btn2
        size_hint : .3, .08
        text : "Stop"
        pos_hint : {"center_x" : .7, "center_y" : .07}



