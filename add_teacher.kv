#: import validate add_teacher.validate
#: import image_select add_teacher.image_select

MDScreen:
    name : "add_teacher"
    md_bg_color : 1, 1, 1, 1

    canvas:
        Color:
            rgb : 1, 1, 1, 1
        Rectangle:
            size : self.size
            pos : self.pos
            source : "images/blackter.jpg"

    MDCard:
        md_bg_color : 133/255, 0, 0, 1
        elevation: 5
        size_hint : 1, .18
        radius : [0, 0, 15, 15]
        pos_hint : {"center_x" : .5, "center_y" : .92}
        MDFloatLayout:
            FitImage:
                size_hint : .15, .65
                radius : [50]
                pos_hint : {"center_x" : .1, "center_y" : .5}
                source : "images/log.png"
            MDLabel:
                text: "Adnan's Institute of WitchCraft"
                halign : "center"
                font_size : "22sp"
                pos_hint : {"center_x" : .56, "center_y" : .5}
                font_name : "fonts/Poppins-Bold.ttf"
                theme_text_color : "Custom"
                text_color : 1, 1, 1, 1

    MDFloatLayout:
        pos_hint : {"center_x" : .5, "center_y" : .51}
        MDLabel:
            text : "Add Teacher"
            font_size : "25dp"
            halign : "center"
            pos_hint : {"center_x" : .71, "center_y" : .76}
            theme_text_color: "Custom"
            text_color: "orange"
            font_name : "fonts/Poppins-Bold.ttf"
        MDIconButton:
            icon : "arrow-u-left-top-bold"
            icon_size : "30dp"
            pos_hint : {"center_x" : .12, "center_y" : .76}
            theme_text_color : "Custom"
            text_color : "orange"
            on_press : root.manager.current = "teachers_dashboard"

        MDCard:
            size_hint : .37, .22
            pos_hint : {"center_x" : .7, "center_y" : .58}
            md_bg_color : 0, 0, 0, .5
            radius : [15]
            MDRoundFlatButton:
                size : self.parent.size
                pos : self.pos
                md_bg_color : "FFE79B"
                on_press : image_select(app)
                FitImage:
                    id : img
                    size: self.parent.size
                    pos : self.parent.pos
                    source : "images/icon.png"

        MDTextField:
            id : email
            mode : "rectangle"
            hint_text : "E-mail"
            size_hint : .39, .08
            font_size : "13sp"
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
            pos_hint : {"center_x" : .26, "center_y" : .65}
        MDTextField:
            id : name
            mode : "rectangle"
            hint_text : "Name"
            size_hint : .39, .08
            font_size : "13sp"
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
            pos_hint : {"center_x" : .26, "center_y" : .55}
        MDTextField:
            id : dob
            mode : "rectangle"
            hint_text : "Date of Birth"
            size_hint : .39, .08
            font_size : "13sp"
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
            pos_hint : {"center_x" : .26, "center_y" : .45}
        MDTextField:
            id : age
            mode : "rectangle"
            hint_text : "Age"
            size_hint : .39, .08
            font_size : "13sp"
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
            pos_hint : {"center_x" : .26, "center_y" : .35}
        MDTextField:
            id : gender
            mode : "rectangle"
            hint_text : "Gender"
            size_hint : .39, .08
            font_size : "13sp"
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
            pos_hint : {"center_x" : .26, "center_y" : .25}
        MDTextField:
            id : contact
            mode : "rectangle"
            hint_text : "Contact"
            size_hint : .39, .08
            font_size : "13sp"
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
            pos_hint : {"center_x" : .26, "center_y" : .15}

        MDTextField:
            id : address
            mode : "rectangle"
            hint_text : "Address"
            size_hint : .39, .1
            font_size : "12sp"
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
            pos_hint : {"center_x" : .72, "center_y" : .41}
        MDTextField:
            id : qualifications
            mode : "rectangle"
            hint_text : "Qualifications"
            size_hint : .39, .08
            font_size : "13sp"
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
            pos_hint : {"center_x" : .72, "center_y" : .32}
        MDTextField:
            id : subject
            mode : "rectangle"
            hint_text : "Subject"
            size_hint : .39, .08
            font_size : "13sp"
            pos_hint : {"center_x" : .72, "center_y" : .235}
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"
        MDTextField:
            id : password
            mode : "rectangle"
            hint_text : "Password"
            size_hint : .39, .08
            font_size : "13sp"
            pos_hint : {"center_x" : .72, "center_y" : .15}
            text_color_normal : "orange"
            line_color_normal : "orange"
            hint_text_color_normal : "orange"

    MDRaisedButton:
        text : "Submit"
        size_hint : .8, .06
        pos_hint : {"center_x" : .5, "center_y" : .06}
        on_press : validate(app, email, name, dob, age, gender, contact, address, qualifications, subject, password)