#: import make_book library.make_book

MDScreen:
    name : "library"
    md_bg_color : 1, 1, 1, 1

    canvas:
        Color:
            rgb : 1, 1, 1, 1
        Rectangle:
            size : self.size
            pos : self.pos
            source : "images/blackter.jpg"

    MDCard:
        md_bg_color : 133/255, 0, 0, 1
        elevation: 5
        size_hint : 1, .18
        radius : [0, 0, 15, 15]
        pos_hint : {"center_x" : .5, "center_y" : .92}
        MDFloatLayout:
            FitImage:
                size_hint : .15, .65
                radius : [50]
                pos_hint : {"center_x" : .1, "center_y" : .5}
                source : "images/log.png"
            MDLabel:
                text: "Adnan's Institute of WitchCraft"
                halign : "center"
                font_size : "22sp"
                pos_hint : {"center_x" : .56, "center_y" : .5}
                font_name : "fonts/Poppins-Bold.ttf"
                theme_text_color : "Custom"
                text_color : 1, 1, 1, 1

    MDFloatLayout:
        MDLabel:
            text : "Library"
            font_size : "30dp"
            halign : "center"
            pos_hint : {"center_x" : .5, "center_y" : .76}
            theme_text_color: "Custom"
            text_color: "orange"
            font_name : "fonts/Poppins-Bold.ttf"
        MDIconButton:
            icon : "arrow-u-left-top-bold"
            icon_size : "30dp"
            pos_hint : {"center_x" : .12, "center_y" : .75}
            theme_text_color : "Custom"
            text_color : "orange"
            on_press : root.manager.current = "homepage"
        MDLabel:
            text : "Read all the books you want for free"
            font_size : "15dp"
            halign : "center"
            pos_hint : {"center_x" : .5, "center_y" : .72}
            theme_text_color: "Custom"
            text_color: "white"
            font_name : "fonts/Poppins-Bold.ttf"

        MDCard:
            md_bg_color : 1, 1, 1, 0
            size_hint : .92, .07
            pos_hint : {"center_x" : .5, "center_y" : .63}
            ScrollView:
                do_scroll_x : True
                GridLayout:
                    rows : 1
                    size_hint : None, 1
                    width : sum(child.width for child in self.children) * 2
                    padding : [5, 0]
                    spacing : [15, 0]
                    MDRoundFlatButton:
                        text : "Academics"
                        size_hint : .3, 1
                        font_name : "fonts/Poppins-SemiBold.ttf"
                        md_bg_color : 133/255, 0, 0, 1
                        on_press :
                            caroused.load_slide(academics)
                    MDRoundFlatButton:
                        text : "Comics/Manga"
                        size_hint : .3, 1
                        font_name : "fonts/Poppins-SemiBold.ttf"
                        md_bg_color : 133/255, 0, 0, 1
                        on_press : caroused.load_slide(comics)
                    MDRoundFlatButton:
                        text : "Psychological"
                        size_hint : .3, 1
                        font_name : "fonts/Poppins-SemiBold.ttf"
                        md_bg_color : 133/255, 0, 0, 1
                        on_press : caroused.load_slide(thriller)
                    MDRoundFlatButton:
                        text : "Mystery"
                        size_hint : .3, 1
                        font_name : "fonts/Poppins-SemiBold.ttf"
                        md_bg_color : 133/255, 0, 0, 1
                        on_press : caroused.load_slide(mystery)

        MDCard:
            size_hint : .9, .54
            md_bg_color : 1, 1, 1, .3
            pos_hint : {"center_x" : .5, "center_y" : .3}
            Carousel:
                id : caroused
                ScrollView:
                    id : academics
                    do_scroll_y : True
                    GridLayout:
                        id : academics_grid
                        cols : 1
                        size_hint : 1, None
                        height : sum(child.height for child in self.children)
                        spacing : [0, 2]
                        padding : [0, 1]

                ScrollView:
                    id : comics
                    do_scroll_y : True
                    GridLayout:
                        id : comics_grid
                        cols : 1
                        size_hint : 1, None
                        height : sum(child.height for child in self.children)
                        spacing : [0, 2]
                        padding : [0, 1]

                ScrollView:
                    id : thriller
                    do_scroll_y : True
                    GridLayout:
                        id : thriller_grid
                        cols : 1
                        size_hint : 1, None
                        height : sum(child.height for child in self.children)
                        spacing : [0, 2]
                        padding : [0, 1]

                ScrollView:
                    id : mystery
                    do_scroll_y : True
                    GridLayout:
                        id : mystery_grid
                        cols : 1
                        size_hint : 1, None
                        height : sum(child.height for child in self.children)
                        spacing : [0, 2]
                        padding : [0, 1]



